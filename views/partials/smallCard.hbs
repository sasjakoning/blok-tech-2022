{{#each data}}
<figure class="smallCard">
    <div class="pictureContainer">

        <picture>
            <!-- profile picture -->
            <source type="image/webp" srcset="/images/user-image1.webp" />
            <source type="image/jpg" srcset="/images/user-image1.jpg" />
            <img src="/images/user-image1.jpg" alt="" />
        </picture>

    </div>

    <div class="infoContainer">
        <!-- lvl -->
        <p class="lvl">5</p>
    </div>




    <figcaption>
        <div class="playerInfo">
            <h2>{{this.charactername}}</h2>
            <h3>{{this.firstname}} {{this.lastname}}</h3>
        </div>

        <button class="matchChat">Chat</button>

        <form method="POST" action="/matches/{{this._id}}">

            <button class="matchChat">Delete Match</button>

        </form>

    </figcaption>
</figure>
{{/each}}